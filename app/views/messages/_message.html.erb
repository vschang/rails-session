<% sender = message.user == current_user %>
<div id="message-div" class="message <%= 'sender' if sender %>">
  <div class="message-content">
    <p><%= message.content %></p>
  </div>
  <div class="message-infos">
    <small>
      <p><%= sender ? 'you' : message.user.username %> at <%= message.created_at.strftime("%H:%M") %></p>
    </small>
  </div>
</div>
